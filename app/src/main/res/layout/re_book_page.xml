<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1500dp"
        android:background="@color/white"
        tools:context=".UI.ReBookPage">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="310dp"
            android:layout_height="210dp"
            android:layout_marginBottom="52dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28"
            app:srcCompat="@drawable/bookinginfo_icon" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewnoplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="350dp"
            android:layout_height="310dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/cardViewnoplate">


            <Button
                android:id="@+id/bookingdate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/baseline_book_online_24"
                android:text="Open Date Picker"
                app:layout_constraintHorizontal_bias="0.489" />

            <Button
                android:id="@+id/bookingsession"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="255dp"
                android:background="@drawable/baseline_wb_sunny_24"
                android:text="Open Date Picker"
                app:layout_constraintHorizontal_bias="0.489" />

            <TextView
                android:id="@+id/textdate"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="218dp"
                android:layout_marginBottom="20dp"
                android:text="Select Booking Date"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textsession"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="260dp"
                android:layout_marginBottom="20dp"
                android:text="Select Booking Session"
                android:textSize="15dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/buttonviewsession1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="SCHEDULE SESSION 1"
                android:textSize="12dp" />

            <Button
                android:id="@+id/buttonviewsession2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:text="SCHEDULE SESSION 2"
                android:textSize="12dp" />

            <Button
                android:id="@+id/buttonviewsession3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="130dp"
                android:text="SCHEDULE SESSION 3"
                android:textSize="12dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="160dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="200dp"
            app:cardElevation="10dp"
            android:backgroundTint="#00CF00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">
            <Button
                android:id="@+id/buttonbook"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="#00CF00"
                android:text="CLICK HERE TO CONFIRM"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
