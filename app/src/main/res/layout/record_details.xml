            <TextView
                android:id="@+id/timefinish"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="205dp"
                android:layout_marginTop="3dp"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/text1"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="29dp"
                android:layout_toEndOf="@+id/dot1"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_alignStart="@+id/text1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="CAR NAME"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dot1"
                android:layout_alignStart="@+id/dot1"
                android:layout_alignEnd="@+id/dot1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="0dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noplate"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/dot2"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_alignStart="@+id/text2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="TOTAL COST"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dot2"
                android:layout_alignStart="@+id/dot2"
                android:layout_alignEnd="@+id/dot2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carname"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/dot3"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/text3"
                android:layout_alignStart="@+id/text3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="PREMISE"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/dot3"
                android:layout_alignStart="@+id/dot3"
                android:layout_alignEnd="@+id/dot3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="0dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_alignStart="@+id/text4"
                android:layout_marginStart="0dp"
                android:text="VALET DETAILS"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_alignStart="@+id/text4"
                android:layout_marginStart="0dp"
                android:layout_marginTop="45dp"
                android:text="PICKUP ADDRESS"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dot4"
                android:layout_alignStart="@+id/dot4"
                android:layout_alignEnd="@+id/dot4"
                android:layout_marginTop="5dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dot4"
                android:layout_alignStart="@+id/dot4"
                android:layout_alignEnd="@+id/dot4"
                android:layout_marginStart="0dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="0dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5"
                android:layout_alignStart="@+id/text5"
                android:layout_marginTop="45dp"
                android:text="SERVICE"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dot5"
                android:layout_alignStart="@+id/dot5"
                android:layout_alignEnd="@+id/dot5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="0dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/cost"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/dot4"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/valet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-3dp"
                android:layout_toEndOf="@+id/dot5"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/valetphonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/dot5"
                android:text="NONE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/customeraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valetphonenum"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/dot5"
                android:text="NONE"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvcarset"
                android:layout_width="143dp"
                android:layout_height="80dp"
                android:layout_below="@+id/valet"
                android:layout_marginStart="81dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="47dp"
                android:layout_toEndOf="@+id/text6"
                android:text="Calculating .."
                android:textSize="15dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="160dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">


        <Button
            android:id="@+id/buttonmap"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:text="OPEN NAVIGATION"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/googlemap" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#03A9F4"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="200dp"
        app:cardElevation="10dp"
        android:layout_marginRight="160dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">


        <Button
            android:id="@+id/buttonvalet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#03A9F4"
            android:layout_marginLeft="5dp"
            android:text="VALET"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/phone" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="#03A9F4"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="200dp"
        app:cardElevation="10dp"
        android:layout_marginRight="160dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <Button
            android:id="@+id/buttoncenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#03A9F4"
            android:layout_marginLeft="5dp"
            android:text="PREMISE"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/phone" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BottomNavigationView"
        app:menu="@menu/bottom_navigation_home" />

</androidx.constraintlayout.widget.ConstraintLayout>