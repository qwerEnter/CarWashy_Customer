<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DF6589"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Border -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="8dp"/>
            <stroke android:color="#33000000" android:width="1dp"/>
        </shape>
    </item>

    <!-- Gradient for 3D effect -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#30FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>
