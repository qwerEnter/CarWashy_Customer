<!-- res/layout/reward_item.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textRewardPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Point: "
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textRewardDesc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Reward Description: "
            android:textSize="14sp" />



    </LinearLayout>

    <Button
        android:id="@+id/buttonClaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:layout_marginLeft="110dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00CF00"/>

    <Button
        android:id="@+id/buttonUnclaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:layout_marginLeft="110dp"
        android:layout_gravity="center"
        android:textColor="#BAB9B9"
        android:backgroundTint="#009F00"/>

</androidx.cardview.widget.CardView>
